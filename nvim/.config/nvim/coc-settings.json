{
    "coc.preferences.formatOnSaveFiletypes": ["python", "javascript", "javascriptreact"],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git", ".hg/"],
            "filetypes": ["go"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        }
    },
    "tsserver.npm": "~/.nvm/versions/node/v10.16.3/bin/npm",
    "python.venvPath": "~/.virtualenvs",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.pyenv/shims/black",
    "python.linting.pylintPath": "~/.pyenv/shims/pylint",
    "diagnostic.errorSign": "•",
    "diagnostic.warningSign": "•",
    "diagnostic.infoSign": "•"
}
