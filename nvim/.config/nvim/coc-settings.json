{
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "go",
        "css",
        "markdown",
        "javascript",
        "javascriptreact",
        "yaml"
    ],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "python.venvPath": "~/.virtualenvs",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.pyenv/shims/black"
}
