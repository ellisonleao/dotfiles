#!/bin/bash

# Set the figlet default font, font directory, and centering as well as
# defaults to passing it to lolcat for coloring.

figl () {
	font=${1:-mono12}
	#clear
	declare -a buf
	while IFS= read -r line; do 
		buf+=("$line")
	done
	#clear
	for line in "${buf[@]}"; do
		figlet -f "$font" -c -t "${line}" | head -20 | lolcat
	done
}

figl $*
